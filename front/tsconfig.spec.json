{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "files": ["src/polyfills.ts"],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "jest-setup.d.ts"
  ]
}
